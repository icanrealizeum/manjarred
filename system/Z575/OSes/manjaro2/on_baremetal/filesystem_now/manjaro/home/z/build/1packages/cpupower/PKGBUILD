pkgbase=linux-tools
pkgname=(
  'cpupower'
)
cat >/dev/null <<EOF
  'cgroup_event_listener'
  'libtraceevent'
  'linux-tools-meta'
  'perf'
  'tmon'
  'turbostat'
  'usbip'
  'x86_energy_perf_policy'
