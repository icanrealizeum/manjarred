+static int dbgp_ehci_controller_reset(void)
+{
+  int loop = 250 * 1000;
+  u32 cmd;
+
+  /* Reset the EHCI controller */
+  cmd = readl(&ehci_regs->command);
+  cmd |= CMD_RESET;
+  writel(cmd, &ehci_regs->command);
+  do {
+    cmd = readl(&ehci_regs->command);
+  } while ((cmd & CMD_RESET) && (--loop > 0));
+
+  if (!loop) {
+    prika("can not reset ehci");
+    return 0;
+  }
+  ehci_status("ehci reset done");
+  return 1;
+}
