#!/bin/bash

fromremotepath="$1"
tolocalpath="$2"

if test -z "$tolocalpath"; then
  tolocalpath="/tmp/"
fi

if test -z "$fromremotepath"; then
  echo "empty source arg"
  exit 2
fi

set -x
k=~/.../koe
chmod u+r -- "$k"
(sleep 10 && chmod u-r -- "$k") &
time scp -i "$k" -vp4 -P 802 -- root@lmighty4:"$fromremotepath" "$tolocalpath"
set +x


